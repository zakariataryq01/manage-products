{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <div>
        {{ form_errors(form) }}
    </div>
        {% for error in errors %}
            <div class="alert alert-danger">
                {{ error.message }}
            </div>
        {% endfor %}

    <div>
        {{ form_start(form) }}

        <div>
            {{ form_label(form.name, "Nom du produit") }}
            <div>
                {{ form_widget(form.name) }}
            </div>
        </div>
        <div>
            {{ form_label(form.description, "description du produit") }}
            <div>
                {{ form_widget(form.description) }}
            </div>
        </div>
        <div>
            {{ form_label(form.category, "la categorie") }}
            <div>
                {{ form_widget(form.category) }}
            </div>
        </div>
        <div>
            {{ form_label(form.quantity, "Quantit√©") }}
            <div>
                {{ form_widget(form.quantity) }}
            </div>
        </div>
        <div>
            {{ form_label(form.price, "Le prix") }}
            <div>
                {{ form_widget(form.price) }}
            </div>
        </div>
        <div>
            {{ form_label(form.TTC, "Inclue le TVA ") }}
            <div>
                {{ form_widget(form.TTC) }}
            </div>
        </div>
            <div>
                {{ form_widget(form.save) }}
            </div>
        {{ form_end(form) }}
    </div>

</div>

{% endblock %}
